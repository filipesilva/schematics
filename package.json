{
  "name": "schematics",
  "version": "0.0.0",
  "description": "Blueprint library for TypeScript.",
  "main": "index.js",
  "scripts": {
    "build:watch": "tsc -w -p src",
    "build": "tsc -p src",
    "test": "npm run build && ./scripts/run-spec.js",
    "test:ci": "npm run build && npm run test:coverage",
    "test:coverage": "npm run coverage:test && npm run coverage:remap && npm run coverage:report",
    "test:watch": "./scripts/run-watch.js",
    "coverage:test": "rm -rf coverage; istanbul cover -x '**/*.spec.js' -i '**/*.js'  --report lcovonly --root dist ./scripts/run-spec.js",
    "coverage:remap": "remap-istanbul --input coverage/coverage.json --output coverage/coverage.json",
    "coverage:report": "istanbul report html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/core": "2.0.0-rc.3",
    "@types/lodash": "4.0.21-alpha",
    "@types/node": "4.0.22-alpha",
    "lodash": "4.13.1",
    "reflect-metadata": "0.1.3",
    "rxjs": "^5.0.0-beta.9",
    "typescript": "next"
  },
  "devDependencies": {
    "@types/glob": "^5.0.22-alpha",
    "@types/jasmine": "^2.2.22-alpha",
    "@types/minimatch": "^2.0.25-alpha",
    "@types/mock-fs": "^3.6.22-alpha",
    "glob": "^7.0.5",
    "istanbul": "^0.4.4",
    "jasmine": "^2.4.1",
    "mock-fs": "^3.9.0",
    "remap-istanbul": "^0.6.4",
    "ts-node": "^0.9.1"
  }
}
